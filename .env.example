# ===========================================
# SYNERGY-GY Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ----- Database -----
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL="postgresql://user:password@localhost:5432/synergy_gy"

# ----- Authentication (Better-Auth) -----
# Secret key for signing tokens (minimum 32 characters)
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET="your-secret-key-min-32-chars"

# Base URL for authentication callbacks and redirects
# Production: https://yourdomain.com
# Development: http://localhost:3000
BETTER_AUTH_URL="http://localhost:3000"

# ----- Server -----
# Port for the backend server
PORT=3000

# Environment mode: development, production, or test
NODE_ENV="development"

# ----- Frontend -----
# API endpoint URL for the frontend to connect to
# Production: https://api.yourdomain.com or https://yourdomain.com
# Development: http://localhost:3000
VITE_API_URL="http://localhost:3000"

# ----- File Storage (Optional - Phase 2) -----
# S3-compatible storage configuration (e.g., Cloudflare R2, AWS S3, MinIO)
# Uncomment and configure when implementing document management

# S3_ENDPOINT="https://xxx.r2.cloudflarestorage.com"
# S3_ACCESS_KEY_ID=""
# S3_SECRET_ACCESS_KEY=""
# S3_BUCKET="synergy-gy-documents"
# S3_REGION="auto"

# Optional: Public URL for accessing uploaded files
# S3_PUBLIC_URL="https://files.yourdomain.com"

# ----- Email (Optional - Phase 3) -----
# Email service configuration (e.g., Resend, SendGrid, AWS SES)
# Uncomment when implementing email notifications

# RESEND_API_KEY=""
# EMAIL_FROM="noreply@yourdomain.com"

# Optional: Additional email settings
# EMAIL_REPLY_TO="support@yourdomain.com"
# EMAIL_SUPPORT="support@yourdomain.com"

# ----- WhatsApp (Optional - Phase 3) -----
# WhatsApp Business API configuration
# Uncomment when implementing WhatsApp notifications

# WHATSAPP_ACCESS_TOKEN=""
# WHATSAPP_PHONE_NUMBER_ID=""
# WHATSAPP_VERIFY_TOKEN=""

# Optional: WhatsApp webhook configuration
# WHATSAPP_WEBHOOK_URL="https://yourdomain.com/webhooks/whatsapp"

# ----- Logging & Monitoring (Optional) -----
# LOG_LEVEL="info"
# SENTRY_DSN=""

# ----- CORS (Optional) -----
# Comma-separated list of allowed origins
# CORS_ORIGINS="http://localhost:5173,https://yourdomain.com"

# ----- Rate Limiting (Optional) -----
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW_MS=900000

# ----- Session (Optional) -----
# SESSION_MAX_AGE=604800000
